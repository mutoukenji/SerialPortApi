<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Serial port setup">
    <ListPreference
        android:key="DEVICE"
        android:persistent="true"
        android:title="设备地址" />
    <ListPreference
        android:entries="@array/baudrates_name"
        android:entryValues="@array/baudrates_value"
        android:key="BAUDRATE"
        android:persistent="true"
        android:title="波特率" />
    <ListPreference
        android:entries="@array/csize_text"
        android:entryValues="@array/csize_value"
        android:key="CSIZE"
        android:persistent="true"
        android:title="数据位" />
    <ListPreference
        android:entries="@array/parity_text"
        android:entryValues="@array/parity_value"
        android:key="PARITY"
        android:persistent="true"
        android:title="校验位" />
    <ListPreference
        android:entries="@array/stopbit_text"
        android:entryValues="@array/stopbit_value"
        android:key="STOPBITS"
        android:persistent="true"
        android:title="停止位" />
</PreferenceScreen>
